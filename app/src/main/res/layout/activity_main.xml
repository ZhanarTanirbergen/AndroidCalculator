<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context="com.example.zhanara.mycalculator.MainActivity">
    <TextView
        android:id="@+id/str"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:background="@color/dark"
        android:text=""
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/now"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/now" />

    <TextView
        android:id="@+id/now"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:background="@color/dark"
        android:text=""
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/history" />

    <Button
        android:id="@+id/equal"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttonequal"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="280dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/div"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonoperator"
        android:text="÷"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/mult"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/mult" />

    <Button
        android:id="@+id/history"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/buttonoperator"
        android:text="H"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@+id/c7"
        app:layout_constraintBottom_toTopOf="@+id/c8" />

    <Button
        android:id="@+id/clear"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/buttonoperator"
        android:text="C"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@+id/c8"
        app:layout_constraintBottom_toBottomOf="@+id/backspace" />

    <Button
        android:id="@+id/backspace"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/buttonoperator"
        android:paddingBottom="10dp"
        android:text="←"
        android:textColor="@android:color/background_light"
        android:textSize="33sp"
        app:layout_constraintBottom_toTopOf="@+id/mult"
        app:layout_constraintRight_toRightOf="@+id/c9" />

    <Button
        android:id="@+id/mult"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonoperator"
        android:text="×"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        app:layout_constraintRight_toRightOf="@+id/sub"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/sub"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonoperator"
        android:text="-"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/sum"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/sum" />

    <Button
        android:id="@+id/sum"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonoperator"
        android:text="+"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/equal"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/equal" />

    <Button
        android:id="@+id/c9"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/buttonstyle"
        android:text="9"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/c6"
        app:layout_constraintRight_toRightOf="@+id/c6" />

    <Button
        android:id="@+id/c8"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonstyle"
        android:text="8"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/c5"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/c5" />

    <Button
        android:id="@+id/c7"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttonstyle"
        android:text="7"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/c4"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/c4" />

    <Button
        android:id="@+id/c3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttonstyle"
        android:text="3"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/c0"
        app:layout_constraintLeft_toRightOf="@+id/c2"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/c2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttonstyle"
        android:text="2"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/c0"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/c0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/c0" />

    <Button
        android:id="@+id/sign"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="180dp"
        android:background="@drawable/buttonstyle"
        android:text="±"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/c0"
        app:layout_constraintRight_toLeftOf="@+id/equal" />

    <Button
        android:id="@+id/dot"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/buttonstyle"
        android:text=","
        android:textColor="@android:color/background_light"
        android:textSize="29sp"
        app:layout_constraintBottom_toBottomOf="@+id/c0"
        app:layout_constraintRight_toLeftOf="@+id/equal" />

    <Button
        android:id="@+id/c0"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttonstyle"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/equal"
        app:layout_constraintLeft_toRightOf="@+id/sign"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/c1"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttonstyle"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sign"
        app:layout_constraintRight_toLeftOf="@+id/c0"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/c5"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:allowUndo="false"
        android:background="@drawable/buttonstyle"
        android:text="5"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/c2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/c2" />

    <Button
        android:id="@+id/c6"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttonstyle"
        android:text="6"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/c2"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toTopOf="@+id/sum" />

    <Button
        android:id="@+id/c4"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/buttonstyle"
        android:elevation="1dp"
        android:text="4"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/c1"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/c1" />

    <TextView
        android:id="@+id/texthist"
        android:layout_width="150dp"
        android:layout_height="244dp"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/str"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>